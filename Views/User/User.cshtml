@model List<User>
<h4 class="text-center">Here are Users!</h4><br>
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr class="success">
            <th>First Name</th>
            <th>Last Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@{
    int i = -1;
foreach(var user in Model)
{
    i +=1;
        <tr>
            <td>@user.FirstName</td>
            <td>@user.LastName</td>
            <td><a href="/user/@i">Show</a></td>
        </tr>
}
}
    </tbody>
</table>